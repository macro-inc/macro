{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "macro",
  "version": "0.1.0",
  "identifier": "com.macro.dev",
  "build": {
    "frontendDist": "../packages/app/dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Macro",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "host": "macro.com",
          "pathPrefix": [
            "/app"
          ]
        },
        {
          "host": "dev.macro.com",
          "pathPrefix": [
            "/app"
          ]
        },
        {
          "host": "staging.macro.com",
          "pathPrefix": [
            "/app"
          ]
        }
      ],
      "desktop": {
        "schemes": [
          "macro"
        ]
      }
    }
  }
}