{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "composite": true,
        "jsx": "react",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/dist",
        "**/*.test.ts",
        "**/*.test.tsx"
    ],
    "references": [
        {
            "path": "./packages/core"
        },
        {
            "path": "./packages/react"
        }
    ]
}
